@model IEnumerable<LibraryManagement.Models.Book>

@{
	ViewData["Title"] = "Book-Index";
}

<h1>Book Index</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>

<table class="table">

	<thead>
		<tr>
			<th>Title</th>
			<th>Author</th>
			<th>ISBN</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.Title</td>
				<td>@item.Author</td>
				<td>@item.ISBN</td>

				<td>
					<a asp-action="Update" class="btn btn-primary" asp-route-id="@item.Id">Update</a>
					<a asp-action="Details"  asp-route-id="@item.Id">Details</a>
					<a asp-action="Delete"  asp-route-id="@item.Id">Delete</a>
				</td>

			</tr>
		}
	</tbody>

</table>
