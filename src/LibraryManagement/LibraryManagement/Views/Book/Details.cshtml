@model LibraryManagement.Models.Book
@{
	ViewData["Title"] = "Details-Book";
}

<h1>Details</h1>
<h4>Book</h4>
<hr />
<div class="row">
	
	
	<div class="col-sm-2">
		ID: @Model.Id
		
	</div>
	<div class="col-sm-10">
		Title: @Model.Title
	</div>
	<div class="col-sm-2">
		Author Name: @Model.Author
	</div>
	<div class="col-sm-10">
		ISBN: @Model.ISBN
	</div>
	
</div>
<div>
	 <a asp-action="Update" asp-route-id="@Model.Id">Update</a>
	 <a asp-action="Index">Back To List</a>
	<a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>

</div>