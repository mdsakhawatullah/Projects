@model LibraryManagement.Models.Category
@{
	ViewData["Title"] = "Details-Category";
}

<h1>Details</h1>
<h4>Category</h4>
<hr />
<div class="row">


	<div class="col-sm-2">
		ID: @Model.Id

	</div>
	<div class="col-sm-10">
		Title: @Model.Name
	</div>
	<div class="col-sm-2">
		Author Name: @Model.CreateDate
	</div>
	<div class="col-sm-10">
		ISBN: @Model.Description
	</div>

</div>
<div>
	<a asp-action="Update" asp-route-id="@Model.Id">Update</a>
	<a asp-action="Index">Back To List</a>
	<a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>

</div>