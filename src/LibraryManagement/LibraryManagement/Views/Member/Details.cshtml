@model LibraryManagement.Models.Member
@{
	ViewData["Title"] = "Details-Member";
}

<h1>Details</h1>
<h4>Book</h4>
<hr />
<div class="row">


	<div class="col-sm-2">
		ID: @Model.MembershipNumber

	</div>
	<div class="col-sm-10">
		Title: @Model.Name
	</div>
	<div class="col-sm-2">
		Author Name: @Model.JoinDate
	</div>
	

</div>
<div>
	<a asp-action="Update" asp-route-id="@Model.MembershipNumber">Update</a>
	<a asp-action="Index">Back To List</a>
	<a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.MembershipNumber">Delete</a>

</div>