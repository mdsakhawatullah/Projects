@model LibraryManagement.Models.Loan

@{
	ViewData["Title"] = "Create Loan";
}

<h1>Crete</h1>

<h4>Loans</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create" enctype="multipart/form-data">
			<div class="form-group">
				<label asp-for="MemberID" class="control-label"></label>
				<input asp-for="MemberID" class="form-control" />
				
			</div>
			<div class="form-group">
				<label asp-for="DueDate" class="control-label"></label>
				<input asp-for="DueDate" class="form-control" />				
			</div>
			<!--Single Checkbox-->
			<div>
				<input type="checkbox" asp-for="IsSubscribed" checked="checked" />
				<label asp-for="IsSubscribed">Subscribee to the Newslatter</label>
			</div>

			<!--Radion Button-->
			<div>
				<lable>Gender: </lable><br />
				<input type="radio" asp-for="Gender" value="Male" /> Male <br />
				<input type="radio" asp-for="Gender" value="Female" /> Female <br />

			</div>

			<!--Dropdown List-->
			<div>
				<label asp-for="SelectedCountry"></label>
				<select asp-for="SelectedCountry" class="form-control">
					<option value="">Select a coutry</option>
					<option value="USA">USA</option>
					<option value="UK">UK</option>
					<option value="Bangladesh">Bangladesh</option>
				</select>
			</div>
			<!--File Upload-->
			<div>
				<label asp-for="UploadedFile"></label>
				<input type="file" asp-for="UploadedFile" />
				<br />
				@*  @if(!string.IsNullOrEmpty(Model.FileName))
				{
				<p>
				Current File:
				<a  asp-route-id="@Model.BookID">@Model.FileName</a>
				</p>
				}  *@
			</div>
			<!--Date Input-->
			<div>
				<label asp-for="DateOfBirth"></label>
				<input type="date" asp-for="DateOfBirth" class="form-control" />
			</div>
			<!--Time Input-->
			<div>
				<label asp-for="PreferTime"></label>
				<input type="time" asp-for="PreferTime" class="form-control" />
			</div>
			<!--Number Input-->
			<div>
				<label asp-for="Age"></label>
				<input type="number" asp-for="Age" class="form-control" min="0 " />
			</div>
			<!--Range Input-->
			<div>
				<label asp-for="Level"></label>
				<input type="range" asp-for="Level" class="form-control" min="0" max="100" />
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back To List</a>
</div>