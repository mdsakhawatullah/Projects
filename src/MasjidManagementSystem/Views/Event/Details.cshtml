@model MasjidManagementSystem.Models.Event
@{
	ViewData["Title"] = "Details-Event";
}

<h1>Details</h1>
<h4>Event</h4>
<hr />
<div class="row">


	<div class="col-sm-2">
		ID: @Model.Id

	</div>
	<div class="col-sm-10">
		Title: @Model.EventName
	</div>
	<div class="col-sm-2">
		Date: @Model.Date
	</div>
	<div class="col-sm-10">
		Location: @Model.Location
	</div>

</div>
<div>
	<a asp-action="Update" asp-route-id="@Model.Id">Update</a>
	<a asp-action="Index">Back To List</a>
	<a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>

</div>